{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": [
        "src/core/background/service-worker.ts",
        "src/core/content/index.tsx",
        "src/features/options-page/index.tsx",
        "vite.config.ts",
        "vitest.config.ts",
        "playwright.config.ts",
        "eslint.config.js"
      ],
      "project": ["src/**/*.{ts,tsx}", "test/**/*.{ts,tsx}"]
    },
    "packages/*": {}
  },
  "ignore": [
    "dist/**",
    "coverage/**",
    "node_modules/**",
    "demo/**",
    "docusaurus/**",
    "playwright-report/**",
    "e2e/**",
    "**/*.d.ts",
    "src/vite-env.d.ts"
  ],
  "ignoreDependencies": [
    "@schema-element-editor/host-sdk",
    "wait-on",
    "concurrently",
    "@types/chrome",
    "@types/styled-components"
  ]
}
